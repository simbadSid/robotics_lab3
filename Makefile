CC     	= g++
EXEC   	= main
CFLAGS 	= -Wall -Werror -g
srcDir	= src/
binDir	= bin/
all   	: $(EXEC)










#-----------------------------------------------------------------------------------------------------------
# ----------------------------------------------- Executable -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
main:		$(binDir)main.o $(binDir)environment.o $(binDir)auxiliary.o $(binDir)nodeList.o
			$(CC) $(CFLAGS) -o $@ $^





#-----------------------------------------------------------------------------------------------------------
# ----------------------------------------------- Modules  -------------------------------------------------
#-----------------------------------------------------------------------------------------------------------
$(binDir)%.o:		$(srcDir)%.cc
						$(CC) $(CFLAGS) -c -o $@ $^



#-----------------------------------------------------------------------------------------------------------
# ------------------------------------------ General Methods -----------------------------------------------
#-----------------------------------------------------------------------------------------------------------
.PHONY	: clean mrproper
clean:
	rm -f $(binDir)*.o
mrproper: clean
	rm -rf $(EXEC)
